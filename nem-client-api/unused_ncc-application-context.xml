<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<bean id="WalletStorage" class="org.nem.ncc.wallet.storage.WalletFileStorage"></bean>
	<bean id="CloudConnector" class="org.nem.ncc.connector.NISConnector"></bean>
	<bean id="WalletHandler" class="org.nem.ncc.controller.WalletHandler">
		<property name="walletStorage" ref="WalletStorage" />
	</bean>
	<bean id="TransactionHandler" class="org.nem.ncc.controller.TransactionHandler">
		<property name="walletHandler" ref="WalletHandler" />
		<property name="nemCloud" ref="CloudConnector" />
	</bean>

</beans>
